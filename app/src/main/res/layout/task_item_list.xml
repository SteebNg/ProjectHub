<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle"
    android:backgroundTint="@color/secondDark"
    android:paddingTop="10dp"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textProjectTaskNameHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textColor="@color/whiteText"
        android:fontFamily="@font/alata"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        app:layout_constraintWidth_max="330dp"/>

    <TextView
        android:id="@+id/textProjectTaskDateHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" by dd/mm/yyyy"
        android:textColor="@color/hintColor"
        android:fontFamily="@font/alata"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/textProjectTaskNameHome"
        app:layout_constraintBottom_toBottomOf="@+id/textProjectTaskNameHome"
        app:layout_constraintStart_toEndOf="@+id/textProjectTaskNameHome"
        android:maxLines="1"
        app:layout_constraintWidth_max="330dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/backgroundTasksHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_image_background"
            android:backgroundTint="@color/grey" />

        <ImageView
            android:id="@+id/imageTaskHome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_gravity="center" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>