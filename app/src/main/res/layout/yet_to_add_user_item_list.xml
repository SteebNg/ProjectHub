<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="14dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/mainDark">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfileUserListYetToAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_corner_radius="100dp"
        android:src="@drawable/nointernetdino"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_image_background" />

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/imageProfileUserListYetToAdd"
        app:layout_constraintEnd_toEndOf="@+id/imageProfileUserListYetToAdd"
        android:layout_marginTop="-4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            app:tint="@color/whiteText" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_image_background"
            android:backgroundTint="@color/grey"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textProfileNameUserListYetToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/imageProfileUserListYetToAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="100dp"
        android:textSize="14sp"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        android:textColor="@color/whiteText" />

</androidx.constraintlayout.widget.ConstraintLayout>