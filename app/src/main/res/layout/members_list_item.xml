<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainDark"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfileImageMembersList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_corner_radius="100dp"
        android:src="@drawable/nointernetdino"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_image_background" />

    <TextView
        android:id="@+id/textProfileNameMembersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/whiteText"
        android:fontFamily="@font/alata"
        app:layout_constraintStart_toEndOf="@+id/imageProfileImageMembersList"
        app:layout_constraintTop_toTopOf="@+id/imageProfileImageMembersList"
        android:layout_marginStart="12dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageLeaderMemberList"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@+id/textProfileNameMembersList"
        app:layout_constraintTop_toTopOf="@+id/textProfileNameMembersList"
        app:layout_constraintBottom_toBottomOf="@+id/textProfileNameMembersList"
        android:src="@drawable/baseline_star_24"
        app:tint="@color/yellow"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textProfileEmailMembersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/hintColor"
        android:fontFamily="@font/alata"
        app:layout_constraintStart_toEndOf="@+id/imageProfileImageMembersList"
        app:layout_constraintTop_toBottomOf="@+id/textProfileNameMembersList"
        android:layout_marginStart="12dp"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/buttonMemberOption"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/baseline_settings_24"
        app:tint="@color/grey"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>