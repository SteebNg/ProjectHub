<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotifyEmailVerifyActivity"
    android:background="@color/mainDark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email_sent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300dp"
        android:id="@+id/imageEmailSent"/>

    <TextView
        android:id="@+id/textEmailVerifyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Email Sent"
        android:textColor="@color/whiteText"
        app:layout_constraintTop_toBottomOf="@+id/imageEmailSent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/alata"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textEmailVerifyBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A verification email has been sent. Please check your email."
        android:textColor="@color/whiteText"
        app:layout_constraintTop_toBottomOf="@+id/textEmailVerifyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:fontFamily="@font/alata"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonBackFromVerify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/mainGreen"
        android:textColor="@color/mainDark"
        app:layout_constraintTop_toBottomOf="@+id/textEmailVerifyBody"
        app:layout_constraintStart_toStartOf="@+id/textEmailVerifyBody"
        app:layout_constraintEnd_toEndOf="@+id/textEmailVerifyBody"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>